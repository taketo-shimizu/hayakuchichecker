<% content_for(:title, '計測画面') %>
<div class="container">
  <div class="row">
  <%= render "shared/header" %>
  <div class="position-absolute h-100 w-100 m-0 d-flex flex-column align-items-center justify-content-center ">
    <div class="image">
    <%= image_tag 'recording.jpg', class:'recording rounded pb-3 mb-5 border-bottom' %>
    <div id="status">スタートしたら10秒以上話してみましょう</div>
    </div>
    <input class="form-control" id="counter" name="counter" type="text" value="00:00:00:00">
    <div class="recording_menu m-5 border-top">
    <button class="btn btn-primary btn-lg m-5" id="start_btn">スタート</button>
    <button class="btn btn-primary btn-lg m-5" id="stop_btn">ストップ</button>
    </div>
  </div>

<footer>
  <div class="fixed-bottom">
    <div class ="text-center">
      <div class="row">
        <div class="col-md-2 offset-md-3">
          <%= link_to '利用規約', '#', class:'col-color' %>
        </div>
        <div class="col-md-2">
          <%= link_to 'プライバシーポリシー', '#', class:'col-color' %>
        </div>
        <div class="col-md-2">
          <%= link_to 'お問い合わせ', '#', class:'col-color'%>
        </div>
        <div class="col-12">
          <p><font color = "white">Copyright ©2021. hayakuchi checker</font></p>
        </div>
      </div>
    </div>
  </div>
</footer>
</div>